---
interface Props {
    href: string;
    isExternal?: boolean;
    onclick?: string;
}
const { href, isExternal = true, onclick } = Astro.props;
---

<a href={href} 
class="rounded-full border border-white/10 flex justify-center items-center 
gap-x-2 py-2 px-3 md:px-4 my-2 md:my-4
bg-white/5 hover:bg-white/10 hover:scale-105 transition-all duration-300 
text-sm md:text-base"
onclick={onclick}
target={isExternal ? "_blank" : "_self"}
rel={isExternal ? "noopener noreferrer" : ""}
>
    <slot name="icon" />
    <slot />
</a>